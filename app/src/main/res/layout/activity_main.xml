<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dominicpfeifer.srl.MainActivity">

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Vorlesen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtZahl1"
        app:layout_constraintVertical_bias="0.473"
        android:layout_marginLeft="62dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtZahl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="151dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="151dp"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/txtZahl1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtZahl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="151dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtGleich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="151dp"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/txtZahl2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextErgebnis"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/txtGleich"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="131dp"
        android:text="LÃ¶sen"
        app:layout_constraintLeft_toRightOf="@+id/btnSpeak"
        app:layout_constraintTop_toBottomOf="@+id/txtZahl1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.258" />
</android.support.constraint.ConstraintLayout>
