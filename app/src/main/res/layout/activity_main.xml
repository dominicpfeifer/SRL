<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_layout"
    tools:context="dominicpfeifer.srl.MainActivity">

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:background="@drawable/read"
        android:layout_marginRight="223dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="119dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txt" />

    <TextView
        android:id="@+id/txtZahl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#ffffff"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txt"
        android:layout_marginRight="17dp"
        app:layout_constraintVertical_bias="0.312"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.928" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txtZahl2"
        android:layout_marginRight="28dp"
        app:layout_constraintVertical_bias="0.312" />

    <TextView
        android:id="@+id/txtZahl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txtGleich"
        android:layout_marginRight="20dp"
        app:layout_constraintVertical_bias="0.312" />

    <TextView
        android:id="@+id/txtGleich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/editTextErgebnis"
        android:layout_marginRight="21dp"
        app:layout_constraintVertical_bias="0.312" />

    <EditText
        android:id="@+id/editTextErgebnis"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:background="@drawable/check"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="297dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btnSpeak"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtPunkte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="23dp" />

    <TextView
        android:id="@+id/txtLeben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txtMulti"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/txtMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/txtPunkte"
        android:layout_marginLeft="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp" />
</android.support.constraint.ConstraintLayout>
