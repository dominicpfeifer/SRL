<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_layout"
    tools:context="dominicpfeifer.srl.MainActivity">

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/read"
        android:layout_marginStart="62dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintVertical_bias="0.407" 
        app:layout_constraintTop_toBottomOf="@+id/txtZahl1"
        app:layout_constraintVertical_bias="0.47000003"
        android:layout_marginLeft="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="62dp" />

    <TextView
        android:id="@+id/txtZahl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="cursive"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.291"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.158" 
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="36dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:fontFamily="cursive"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.291"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.301" 
        app:layout_constraintLeft_toRightOf="@+id/txtZahl1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/txtZahl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="158dp"
        android:text="2"
        android:fontFamily="cursive"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.381" 
        app:layout_constraintLeft_toRightOf="@+id/txt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/txtGleich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="151dp"
        android:text="="
        android:fontFamily="cursive"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.018"
        app:layout_constraintLeft_toRightOf="@+id/txtZahl2"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/editTextErgebnis"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" 
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp" />

    <EditText
        android:id="@+id/editTextErgebnis"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="44dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.286" 
        app:layout_constraintLeft_toRightOf="@+id/txtGleich"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/check"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintVertical_bias="0.407" 
        app:layout_constraintHorizontal_bias="0.258"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/txtPunkte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSpeak"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/txtLeben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="36dp" 
        app:layout_constraintBottom_toTopOf="@+id/btnCheck"
        app:layout_constraintLeft_toRightOf="@+id/txtPunkte"
        app:layout_constraintTop_toBottomOf="@+id/editTextErgebnis"
        app:layout_constraintVertical_bias="0.488"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/txtMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/txtPunkte"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txtLeben"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.985"
        app:layout_constraintHorizontal_bias="0.556"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
