<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lernen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/study"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dominicpfeifer.srl.Lernen">

    <Button
        android:background="@drawable/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:id="@+id/btn_1er"
        android:layout_marginEnd="11dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_10er" />

    <Button
        android:background="@drawable/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_2er"
        android:layout_alignBaseline="@+id/btn_1er"
        android:layout_alignBottom="@+id/btn_1er"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_2er"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:id="@+id/btn_3er" />

    <Button
        android:background="@drawable/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1er"
        android:layout_alignStart="@+id/btn_1er"
        android:layout_marginTop="53dp"
        android:id="@+id/btn_4er" />

    <Button
        android:background="@drawable/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_4er"
        android:layout_alignEnd="@+id/btn_2er"
        android:id="@+id/btn_5er" />

    <Button
        android:background="@drawable/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_5er"
        android:layout_alignEnd="@+id/btn_3er"
        android:id="@+id/btn_6er" />

    <Button
        android:background="@drawable/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4er"
        android:layout_alignStart="@+id/btn_4er"
        android:layout_marginTop="57dp"
        android:id="@+id/btn_7er" />

    <Button
        android:background="@drawable/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_8er"
        android:layout_alignBaseline="@+id/btn_7er"
        android:layout_alignBottom="@+id/btn_7er"
        android:layout_alignStart="@+id/btn_2er" />

    <Button
        android:background="@drawable/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_9er"
        android:layout_alignBaseline="@+id/btn_8er"
        android:layout_alignBottom="@+id/btn_8er"
        android:layout_alignStart="@+id/btn_6er" />

    <Button
        android:background="@drawable/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_10er"
        android:layout_below="@+id/btn_8er"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" 
        android:text="10er Reihe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_8er"
        android:layout_marginBottom="13dp"
        android:id="@+id/btn_10er" />
</RelativeLayout>
